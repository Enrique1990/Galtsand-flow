  font-weight: bold;
  margin-top: auto;
}

/* Accordion styles */
.accordion {
  display: none;
}

.accordion-item {
  border-bottom: 1px solid #ddd;
}

.accordion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 15px 10px;
  cursor: pointer;
  font-weight: bold;
  font-size: 1em;
  width: 100%;
  border: none;
  outline: none;
  text-align: left;
}

.accordion-header-content {
  display: flex;
  align-items: center;
}

.accordion-header-content img.accordion-icon-img {
  margin-right: 10px;
  width: 30px;
  height: 30px;
}

.accordion-header h3 {
  margin: 0;
  text-align: left; /* Ensure alignment of text next to the icon */
  font-size: 1.2em;
  flex-grow: 1;
  line-height: 1.1;
}

.accordion-icon {
  font-size: 1.2em;
  transition: transform 0.3s ease;
}

.accordion-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.accordion-content p {
  margin: 15px 0;
  font-size: 0.9em;
  color: #555;
}

.accordion-item.active .accordion-content {
  max-height: 200px;
      padding: 0 15px 10px 15px;
    font-size: 1rem;
  text-align: left;
}

.accordion-item.active .accordion-icon {
      /* transform: scaleY(-1); */
}

/* Media Queries for Mobile View */
@media (max-width: 768px) {
  .eco-features {
    display: none;
  }
  .accordion {
    display: block;
  }

  .accordion-header h3 {
    text-align: left; /* Ensure text is aligned properly in mobile */
    line-height: 1.1;
    max-width: 84%;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    font-size: 1rem;
  }

  .accordion-header-content {
    justify-content: flex-start; /* Align icon and text to the left */
  }
   .accordion-icon {
    display: inline-block;
    margin-left: auto;
    transition: transform 0.3s ease;
  }
  .subheading {
    padding: 0px 10px 0px 10px;
  }
}






