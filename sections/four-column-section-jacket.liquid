{% stylesheet %}
  .four-column-section {
    display: flex;
    flex-wrap: wrap;
    background-color: #f0f0f0;
    max-height: 100%;
    min-height: 671px;
  }
   .column {
    padding: 50px;
  }
  .column1 {
    flex: 1.5; /* Make column 1 twice as wide */
  }
  .column2, .column4 {
    flex: 1; /* Standard size for columns 2 and 4 */
  }
  .column3 {
    flex: 0.7; /* Make column 3 half the size */
    font-weight: bold;
  }
  .column1 h1 {
    margin-bottom: 10px;
  }
  .column1 p, .column1 h3 {
    margin-bottom: 24px;
  }
  .column3 h3 {
    letter-spacing: 0.2px;
    text-align: center;
    font-weight: bold;
  }
  .fit-container {
    border: 1px solid black;
    border-radius: 10px;
    padding: 1px 10px 1px 10px;
    text-align: center;
    margin-bottom: 10px;
    letter-spacing: 0.2px;
  }
  .fit-container .line {
    display: flex;
    justify-content: space-between;
    margin-top: 5px;
  }
  .background-image {
    background-size: cover;
    background-position: center;
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
  }
  .line_point {
    padding-left: 8px;
    padding-right: 8px;
  }
  .line span{
    padding-bottom: 1px;
  }
  .color_name {
    display: flex;
    flex-direction: column;
    align-items: center;
  justify-content: center;
    text-align: center
  }
  .color_name span{
    width: fit-content;
  }
  .colors{
    display: flex;
    flex-wrap: wrap;
  }
  .colors .color_name{
    flex: 1 1 calc(50% - 20px); 
    box-sizing: border-box;
    margin-bottom: 6px
  }
  .colors_container3 {
    margin-top: 50%;
  }
  @media (max-width: 992px) {
  .four-column-section {
    flex-wrap: nowrap;
    flex-direction: column;
    align-items: center;
  }

  .column {
    width: 100%;
    padding: 20px;
    margin-bottom: 20px;
  }
   
  .column3, .column2, .column4, .column1 {
    flex: 1;
  }
     .fit-container {
      display: none;
    }
    .background-image{
      height: 200px;
      aspect-ratio: auto;
    }
     .column4 {
    order: 1; /* First row */
  }

  .column1 {
    order: 2; /* Second row */
  }

  .column3 {
    order: 3; /* Third row */
  }
    .colors_container3 {
    margin-top: 0%;
}
}

@media (min-width: 576px) and (max-width: 992px) {
  .four-column-section {
    display: flex;
    flex-wrap: wrap;
  }
    .colors {
    flex-wrap: nowrap;
  }
  .column2{
    display: none;
  }
.hide{
  display: none
}
  .column1 {
    flex: 1 1 50%;
    text-align: center;
  }

  .column3, .column4 {
    flex: 1 1 50%;
  }

  .column {
    padding: 20px;
  }
   .fit-container {
      display: none;
    }
   .background-image{
      min-height: 434px;
     aspect-ratio: auto;
    }
   .column4 {
    order: 1; /* First row */
  }

  .column1 {
    order: 2; /* Second row */
  }

  .column3 {
    order: 3; /* Third row */
  }
  .colors_container3 {
    margin-top: 0%;
}
}
  

@media (max-width: 576px) {
  .four-column-section {
    display: flex;
    flex-direction: column;
  }
.hide{
  display: none;
}
  .column {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
  }
  .column2{
    display: none
  }
.colors_container3 {
    margin-top: 0%;
}
  .column1, .column3, .column4 {
    flex: 1 1 100%;
  }
   .fit-container {
      display: none;
    }
   .background-image{
      min-height: 200px;
     aspect-ratio: auto;
    }
  .column1 {
            text-align: center;
  }

}
